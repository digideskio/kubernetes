{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "busybox",
    "namespace": "default"
  },
  "spec": {
    "containers": [
      {
        "image": "busybox",
        "resources": {
          "limits": {
            "cpu": "100m",
            "memory": "256Mi"
          }
        },
        "command": [
          "sleep",
          "3600"
        ],
        "imagePullPolicy": "IfNotPresent",
        "name": "busybox"
      }
    ],
    "restartPolicy": "Always"
  }
}